<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>My Posts</title>
</head>
<body>
  <%- include('../partials/_navbar') %>
  <h1>Welcome to My Posts</h1>

  <a href="/posts/new">Create New Post</a>

  <h2>Your Posts</h2>
  <% if (posts.length > 0) { %>
    <ul>
      <% posts.forEach(post => { %>
        <li>
          <%= post.title %> - <%= post.content.substring(0, 100) %>... - <%= new Date(post.createdAt).toDateString() %>
          <form action="/posts/<%= post._id %>?_method=DELETE" method="POST" style="display:inline;">
            <button type="submit">Delete</button>
          </form>
          <a href="/posts/<%= post._id %>/edit">Edit</a>
          <a href="/posts/<%= post._id %>">View</a>
        </li>
      <% }) %>
    </ul>
  <% } else { %>
    <p>There are no posts available.</p>
  <% } %>
</body>
</html>
